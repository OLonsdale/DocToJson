<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="pa-4">
        <CascadingValue Value="(Action)(() => dark = !dark)">
            @Body
        </CascadingValue>
    </MudContainer>
</MudLayout>

@code {
    
    bool dark = true;
    
}
